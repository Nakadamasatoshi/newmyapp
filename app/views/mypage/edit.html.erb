<div class="container machine-container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">登録内容編集</h2>
      <%= form_with(url: update_mypage_path, model: @profile, local: true, method: :post, html: { class: 'post-form' }) do |f| %>

        
        <div class="form-group">
          <%= f.label "ニックネーム", class: 'form-label' %>
          <%= f.text_field :nickname, value: @profile.nickname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "苗字", class: 'form-label' %>
          <%= f.text_field :familyname, value: @profile.familyname, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label "氏名", class: 'form-label' %>
          <%= f.text_field :firstname, value: @profile.firstname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "生年月日", class: 'form-label' %>
          <%= f.date_field :birthdate, value: @profile.birthdate, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "電話番号（ハイフンは除いてください）", class: 'form-label' %>
          <%= f.number_field :phonenumber, value: @profile.phonenumber, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label "郵便番号（ハイフンは除いてください）", class: 'form-label' %>
          <%= f.number_field :postalcode, value: @profile.postalcode, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "都道府県", class: 'form-label' %>
          <%= f.text_field :prefecture, value: @profile.prefecture, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label "市町村", class: 'form-label' %>
          <%= f.text_field :city, value: @profile.city, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label "番地", class: 'form-label' %>
          <%= f.text_field :town, value: @profile.town, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label "アパート名", class: 'form-label' %>
          <%= f.text_field :buildingname, value: @profile.buildingname, class: 'form-control' %>
        </div>
          <div class="form-group">
          <%= f.label "コメント", class: 'form-label' %>
          <%= f.text_field :comment, value: @profile.comment, class: 'form-control' %>
        </div>
        <div class="form-group image-upload">
          <%= f.label "画像", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Images Preview" class="image-preview__image">
            <span class="image-preview__default-text">ここに画像を貼り付け</span>
          </div>
          <%= f.file_field :images, class: 'form-control-file', id: 'imageUpload' %>
        </div>
        <div class="button-group">
          <%= f.submit '登録', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
