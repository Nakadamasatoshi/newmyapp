<div class="identification-container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <%= form_with(url: update_identification_path, model: @profile, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>

        <div class="form-group image-upload">
          <%= f.label "運転免許証", class: 'form-label' %>
            <div class="image-preview" id="imagePreview">
              <img src="" alt="Images Preview" class="image-preview__image">
              <span class="image-preview__default-text">ここに画像を貼り付け</span>
            </div>
              <%= f.file_field :license_image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <span></span>
        <span></span>
        <span></span>

        <div class="form-group image-upload">
          <%= f.label "マイナンバーカード", class: 'form-label' %>
            <div class="image-preview" id="imagePreview">
              <img src="" alt="Images Preview" class="image-preview__image">
              <span class="image-preview__default-text">ここに画像を貼り付け</span>
            </div>
              <%= f.file_field :personal_image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>