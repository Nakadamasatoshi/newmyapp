<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">保有機登録</h2>
      <!-- 投稿を記憶するための model: @machineを追加 -->
      <%= form_with(url: create_machine_path, model: @machine, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>
      <!-- ここまで -->
      <!-- バリデーションエラーメッセージの追加 -->
        <% if @machine.errors.any? %>
          <ul>
            <% @machine.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <!-- ここまで追加 -->

        <div class="form-group">
          <%= f.label "タイトル", class: 'form-label' %>
          <%= f.text_area :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "全長(mm)", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "全幅(mm)", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "全高(mm)", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "馬力(ps)", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "重量(kg)", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "燃料", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "キャビン", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "アタッチメント", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "使用時間(時間)", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "メンテナンス状況", class: 'form-label' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "運搬方法", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "補足", class: 'form-label' %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>        
        <div class="form-group image-upload">
          <%= f.label "画像", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Image Preview" class="image-preview__image">
            <span class="image-preview__default-text">Image will be displayed here</span>
          </div>
          <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <div class="button-group">
          <%= f.submit '投稿する', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>